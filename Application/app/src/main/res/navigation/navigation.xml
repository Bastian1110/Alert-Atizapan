<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="mx.itesm.incidentesatizapan.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_manualFragment"
            app:destination="@id/manualFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="mx.itesm.incidentesatizapan.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/manualFragment"
        android:name="mx.itesm.incidentesatizapan.ManualFragment"
        android:label="fragment_manual"
        tools:layout="@layout/fragment_manual" >
        <action
            android:id="@+id/action_manualFragment_to_incendioFragment"
            app:destination="@id/incendioFragment" />
        <action
            android:id="@+id/action_manualFragment_to_inundacionFragment"
            app:destination="@id/inundacionFragment" />
        <action
            android:id="@+id/action_manualFragment_to_terremotoFragment"
            app:destination="@id/terremotoFragment" />
    </fragment>
    <fragment
        android:id="@+id/incendioFragment"
        android:name="mx.itesm.incidentesatizapan.IncendioFragment"
        android:label="fragment_incendio"
        tools:layout="@layout/fragment_incendio" />
    <fragment
        android:id="@+id/inundacionFragment"
        android:name="mx.itesm.incidentesatizapan.InundacionFragment"
        android:label="fragment_inundacion"
        tools:layout="@layout/fragment_inundacion" />
    <fragment
        android:id="@+id/terremotoFragment"
        android:name="mx.itesm.incidentesatizapan.TerremotoFragment"
        android:label="fragment_terremoto"
        tools:layout="@layout/fragment_terremoto" />
</navigation>