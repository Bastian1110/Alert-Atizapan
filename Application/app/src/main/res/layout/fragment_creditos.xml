<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CreditosFragment">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvTitleCredits"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp"
                android:text="Créditos"
                android:textSize="35dp" />


            <TextView
                android:id="@+id/tvCreditsDescription"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Esta aplicación fue creada por un grupo de estudiantes del Tecnologico de Monterrey Estado de México (CEM)."
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sensacion_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsPeopleDescription"
                    android:layout_width="343dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text=" Los siguientes son los integrantes que conformaron  el grupo que realizo la aplicación." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDavidDamianGalan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="David Damián Galán" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHarumiCristalManzanoYanes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Harumi Cristal Manzano Yáñez" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMarcoBarbosaMaruri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Marco Barbosa Maruri" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSebastianMoraUgalde"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sebastián Mora Ugalde" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvSebastianBurgosAlanis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sebastián Burgos Alanís" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAdrianBravoLopez"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Adrián Bravo López" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/sensacion_background"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsTechnologiesDescription"
                    android:layout_width="343dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Las tecnologias implementadas son las siguientes" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    ></LinearLayout>

                <TextView
                    android:id="@+id/tvCreditsTechnologiesWebDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Para la funcionalidad del cliente web" />

                <TextView
                    android:id="@+id/tvTechnologyReact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪React" />

                <TextView
                    android:id="@+id/tvTechnologyNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪Next" />

                <TextView
                    android:id="@+id/tvTechnologyTailWindCss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪Tailwindcss" />

                <TextView
                    android:id="@+id/tvCreditsTechnologiesBackendDescription"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:gravity="center"
                    android:text="Para la funcionalidad del backend y otros servicios web" />

                <TextView
                    android:id="@+id/tvTechnologyDocker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪Docker" />

                <TextView
                    android:id="@+id/tvTechnologyNgnix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪NGINX" />

                <TextView
                    android:id="@+id/tvTechnologyExpress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪Express" />

                <TextView
                    android:id="@+id/tvTechnologyNodeJs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪Node.js" />

                <TextView
                    android:id="@+id/tvTechnologyJwt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ▪JWT" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>